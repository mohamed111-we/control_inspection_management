<odoo>
    <data>

        <!-- tree View for Inspectors -->
        <record id="view_inspectors_tree" model="ir.ui.view">
            <field name="name">inspection.inspector.tree</field>
            <field name="model">inspection.inspector</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="is_active"/>
                </tree>
            </field>
        </record>

        <!-- Form View for Inspectors -->
        <record id="view_inspectors_form" model="ir.ui.view">
            <field name="name">inspection.inspector.form</field>
            <field name="model">inspection.inspector</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="department_id" readonly="1"/>
                            <field name="is_active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search view -->
        <record id="view_inspector_search" model="ir.ui.view">
            <field name="name">inspector.search</field>
            <field name="model">inspection.inspector</field>
            <field name="arch" type="xml">
                <search string="Inspector Search">
                    <field name="name" string="Inspector Name" filter_domain="[('name', 'ilike', self)]"/>
                    <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('is_active', '=', False)]"/>
                </search>
            </field>
        </record>

        <!-- Action to open the Inspectors -->
        <record id="action_inspectors" model="ir.actions.act_window">
            <field name="name">Inspectors</field>
            <field name="res_model">inspection.inspector</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>

