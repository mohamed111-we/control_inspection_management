<odoo>
    <data>

        <record id="view_violations_tree" model="ir.ui.view">
            <field name="name">inspection.violations.tree</field>
            <field name="model">inspection.violations</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_violations_form" model="ir.ui.view">
            <field name="name">inspection.violations.form</field>
            <field name="model">inspection.violations</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_violations" model="ir.actions.act_window">
            <field name="name">Violations</field>
            <field name="res_model">inspection.violations</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>