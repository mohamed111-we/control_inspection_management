<odoo>

    <record id="view_inspection_plan_tree" model="ir.ui.view">
        <field name="name">inspection.plan.tree</field>
        <field name="model">inspection.plan</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_inspection_plan_form" model="ir.ui.view">
        <field name="name">inspection.plan.form</field>
        <field name="model">inspection.plan</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div name="button_box" position="inside">
                        <button name="action_view_visits" type="object"
                                class="oe_stat_button" icon="fa-list"
                                invisible="visits_count == 0">
                            <field name="visits_count" widget="statinfo" string="Visits"/>
                        </button>

                    </div>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="status" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Planned Visits">
                            <field name="planned_visits_ids">
                                <tree>
                                    <field name="target_entity"/>
                                    <field name="name"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="status"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="target_entity"/>
                                        <field name="name"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="status"/>
                                        <field name="inspector"/>
                                        <field name="attachment_ids" widget="many2many_binary"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_inspection_visit_tree" model="ir.ui.view">
        <field name="name">inspection.visit.tree</field>
        <field name="model">inspection.visit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="target_entity"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_inspection_visit_form" model="ir.ui.view">
        <field name="name">inspection.visit.form</field>
        <field name="model">inspection.visit</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button string="Inspection Plan" type="object" name="action_open_inspection_plan"
                                class="oe_stat_button" icon="fa-list">
                            <field name="plan_id" widget="statinfo" string="Plan"/>
                        </button>
                    </div>

                    <group>
                        <field name="name"/>
                        <field name="plan_id"/>
                        <field name="target_entity"/>
                        <field name="inspector"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="status"/>
                        <field name="attachment_ids" widget="many2many_binary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_inspection_visit_calendar" model="ir.ui.view">
        <field name="name">inspection.visit.calendar</field>
        <field name="model">inspection.visit</field>
        <field name="arch" type="xml">
            <calendar date_start="start_date" date_stop="end_date" color="plan_id">
                <field name="name"/>
                <field name="target_entity"/>
            </calendar>
        </field>
    </record>

    <record id="action_inspection_visits" model="ir.actions.act_window">
        <field name="name">Inspection Visits</field>
        <field name="res_model">inspection.visit</field>
        <field name="view_mode">tree,form,calendar</field>
    </record>

    <record id="action_inspection_plans" model="ir.actions.act_window">
        <field name="name">Inspection Plans</field>
        <field name="res_model">inspection.plan</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>